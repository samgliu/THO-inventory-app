<h1><%= title %>: <%= category.categoryName %></h1>
<% if(category_items.length){%>
<p>Delete the following items before attempting to delete this category.</p>
<h4>Items:</h4>
<ul>
    <% category_items.forEach(function(item) { %>
    <li>
        <div><%- include('item_detail', {item: item}); %></div>
    </li>
    <% }); %>
</ul>
<% } else { %>
<p>Do you really want to delete this Category?</p>
<form method="POST" action="">
    <input
        type="hidden"
        name="categoryid"
        value="<%= category._id %>"
        required
    />
    <button type="submit">Delete</button>
</form>
<% } %>

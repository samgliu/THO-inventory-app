<h1><%= title %></h1>

<form method="POST" action=""  enctype="multipart/form-data">
    <label for="category_name">Category Name</label>
    <input
        type="text"
        placeholder="category name"
        name="category_name"
        value="<%= (category===undefined) ? '': category.categoryName %>"
        required/><br />
    <label for="category_description">Category Description</label>
    <input
        type="text"
        placeholder="category description"
        name="category_description"
        value="<%= (category===undefined) ? '' : category.description %>"
        required/><br />
    <% if (title=="Create Category") { %>
    <label for="picture">Category Picture</label>
    <input type="file" name="picture" value="<%= (category===undefined) ? '' : category.picture %>" required/><br />
    <% } %>
    <% if (category!=undefined) { %>
        <img src="<%= category.picture %>" alt="" /><br />
    <% } %>
    <input type="submit" value="submit" />
</form>

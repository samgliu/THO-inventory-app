<h1><%= title %></h1>
<form method="POST" action="" enctype="multipart/form-data">
    <% if (item!=undefined) { %>
        <label class="admin-color" for="adminpassword">Admin Password: </label>
        <input type="password" name="adminpassword" value="" required /> <br />
    <% } %>
    <p class="alert"> <%= errors[0].msg %> </p>
    <label for="item_name">Name:</label>
    <input
        type="text"
        placeholder="name"
        name="item_name"
        value="<%= (item===undefined)? '': item.itemName %>"
        required)
    /><br />
    <label for="item_description">Description:</label>
    <input
        type="text"
        placeholder="description"
        name="item_description"
        value="<%= (item===undefined)? '': item.description %>"
        required)
    /><br />
    <% if (title=="Create Item") { %>
        <label for="picture">Picture</label>
        <input type="file" name="picture" value="<%= (item===undefined)? '': item.picture %>" required/><br />
    <% } %>

    <% if (item!=undefined) { %>
        <img src="<%= item.picture %>" alt=""/><br />
        <input type="hidden" name="picture" value ="<%= item.picture %>" />
    <% } %>

    <label for="category">Category:</label>
    <select
        type="select"
        placeholder="select category"
        name="category"
        required
    >
        <% categories.forEach(function(category) { %>
        <option value="<%= category._id %>" 
            <% if (item!=undefined){ %>
                <% (category._id.toString()==item.category._id ||item._id.toString()==item.category) ? 'selected' : false  %>
            <% } %>
        ><%= category.categoryName %>
        </option>
        <% }); %></select
    ><br />
    <label for="item_price">Price:</label>
    <input
        type="number"
        step="0.01"
        min="0"
        placeholder="price"
        name="item_price"
        value="<%= (item===undefined)? '': item.price %>"
        required)
    /><br />
    <label for="item_quantity">Quantity:</label>
    <input
        type="number"
        min="0"
        placeholder="quantity"
        name="item_quantity"
        value="<%= (item===undefined)? '': item.quantity %>"
        required)
    /><br />

    <input class="button" type="submit" value="submit" />
</form>

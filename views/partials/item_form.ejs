<h1><%= title %></h1>
<form method="POST" action=""  enctype="multipart/form-data">
    <label for="item_name">Item Name</label>
    <input
        type="text"
        placeholder="item name"
        name="item_name"
        value="<%= (item===undefined)? '': item.itemName %>"
        required)
    /><br />
    <label for="item_description">Item Description</label>
    <input
        type="text"
        placeholder="item description"
        name="item_description"
        value="<%= (item===undefined)? '': item.description %>"
        required)
    /><br />
    <label for="item_pic">Item Picture</label>
    <input
        type="text"
        placeholder="item picture"
        name="item_pic"
        value="<%= (item===undefined)? '': item.picture %>"
        required)
    /> 
    <input type="file" name="item_pic_upload" /><br />
    <label for="category">Category</label>
    <select
        type="select"
        placeholder="select category"
        name="category"
        required
    >
        <% categories.forEach(function(category) { %>
        <option value="<%= category._id %>" 
            <% if (item!=undefined){ %>
                <% (category._id.toString()==item.category._id ||item._id.toString()==item.category) ? 'selected' : false  %>
            <% } %>
        ><%= category.categoryName %>
        </option>
        <% }); %></select
    ><br />
    <label for="item_price">Item Price</label>
    <input
        type="number"
        step="0.01"
        min="0"
        placeholder="item price"
        name="item_price"
        value="<%= (item===undefined)? '': item.price %>"
        required)
    /><br />
    <label for="item_quantity">Item Quantity</label>
    <input
        type="number"
        min="0"
        placeholder="item quantity"
        name="item_quantity"
        value="<%= (item===undefined)? '': item.quantity %>"
        required)
    /><br />

    <input type="submit" value="submit" />
</form>
